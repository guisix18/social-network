// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id
  name String
  email String @unique
  password String
  resetToken String?
  posts Post[]
  comments Comments[]
}

model Post {
  id String @id
  content String
  user User? @relation(fields: [userId], references: [id])
  userId String
  imageUrl String?
  imageFormat String?
  comments Comments[]
}

model Comments {
  id String @id
  text String
  user User? @relation(fields: [userId], references: [id])
  userId String
  post Post? @relation(fields: [postId], references: [id])
  postId String
  children Comments[] @relation("ParentChild")
  parentId String?
  parent Comments? @relation("ParentChild", fields: [parentId], references: [id])
}